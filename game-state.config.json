{
    "name": "mars",
    "devices": {
        "SHOOT_AGAIN": {
            "state": false
        },
        "TWO_TIMES_MULTIPLIERS": {
            "state": false
        }
    },
    "data": {
        "currentBall": 0,
        "ballsPerGame": 3
    },
    "states": {
        "attract": {
            "init": true,
            "devices": {
                "TWO_TIMES_MULTIPLIERS": {
                    "blink": 1000
                }
            },
            "actions": {
                "REPLAY": {
                    "targets": [{
                        "type": "state",
                        "target": "play"
                    }]
                },
                "OUTHOLE": {
                    "targets": [{
                        "type": "device",
                        "id": "OUTHOLE",
                        "action": "on"
                    }]
                }
            }
        },
        "play": {
            "devices": {
                "SHOOT_AGAIN": {
                    "blink": 500
                },
                "TROUGH_RELEASE": {
                    "action": "on"
                }
            },
            "data": {
                "currentBall": 1
            },
            "actions": {
                "OUTHOLE": {
                    "targets": [{
                        "type": "conditional",
                        "condition": "this.data.currentBall <= this.data.ballsPerGame",
                        "true": {
                            "type": "data",
                            "id": "currentBall",
                            "increment": 1
                        },
                        "false": {
                            "type": "state",
                            "target": "attract"
                        }
                    }]
                }
            }
        }
    }
}