{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "ignorePatterns": [
        "**/service-menu"
    ],
    "parser": "@typescript-eslint/parser",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": ["error", 4],
        "require-jsdoc": ["off"],
        "brace-style": ["error", "stroustrup"],
        "max-len": ["error", 180],
        "comma-dangle": "off"
    }
}